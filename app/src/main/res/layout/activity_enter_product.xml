<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EnterProduct"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/enter_product"
        android:layout_width="302dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="Enter Book Details"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="26dp"
        android:hint="Enter book name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Enter Book Author"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/book_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Enter book price"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/book_descr_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="Enter Book  Description"
        android:inputType="textMultiLine"
        android:maxLines="4"
        android:minLines="2"
        android:scrollbars="vertical" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_height="wrap_content"
        android:hint="Enter Initial Quantity"
        android:ems="10"
        android:id="@+id/productQuantity"
        android:inputType="number"/>

    <EditText
        android:id="@+id/bookLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="26dp"
        android:hint="Enter book Link"
        android:inputType="textWebEditText" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/book_pic_admin"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_launcher_foreground"/>
        <Button
            android:id="@+id/book_pic_name"
            android:layout_width="55dp"
            android:layout_height="34dp"
            android:ems="10"
            android:hint="Upload"
            android:text="Upload"
            android:textSize="8sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/Enter_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:text="Submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/book_pic_name" />

        <Button
            android:id="@+id/exit_from_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginBottom="36dp"
            android:text="EXIT" />

    </LinearLayout>



</LinearLayout>